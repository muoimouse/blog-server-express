{
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "rules": {
        "no-console": 0,
        "no-unused-vars": 2,
        "no-undef": 1,
        "semi": 2,
        "require-yield": 0
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "eslintConfig": {
        "globals": {
            "require": true,
            "Buffer": true
        }
    }
}