{
  "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "mocha": true,
      "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "rules": {
      "no-console": 0,
      "no-unused-vars": 2,
      "no-undef": 1,
      "require-yield": 0,
      "quotes": [
          "error",
          "single"
      ],
      "semi": 2
  }
}