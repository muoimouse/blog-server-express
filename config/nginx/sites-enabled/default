
server {

  listen 80;
  server_name 10log.dev;
  access_log /var/log/nginx/blog-server-express.log;
  charset utf-8;

  location /blog-server-express {
    alias /usr/src/blog-server-express;
  }

  location / {
    proxy_pass http://web:1337;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }

}